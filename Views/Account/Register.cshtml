@model LasFiszkas.Models.RegisterVM
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @style = "display: table; font-size: 18px; margin: auto;" })

<div style="text-align:center; margin-bottom: 15px">
    <span style="margin-right: 15px">Dodaj zdjęcie (maksymalna wielkość pliku: 4MB)</span>
    <input class="inputFile" type="file" name="file" id="file">
    <label for="file" class="custom-file-upload">
        Wybierz plik
    </label>
    <div id="choose">Nie wybrano</div>
</div>
    <table style="margin: auto;">
        <tr>
            <td>@Html.LabelFor(l => l.Email, "E-mail:", new { @style = "font-size: 22px; margin-right: 10px; padding: 5px;" })</td>
            <td>
                @Html.TextBoxFor(l => l.Email, new { @class = "prettyInput", @style = "width: 110%;" })
            </td>
        </tr>

        <tr>
            <td>@Html.LabelFor(l => l.NickName, "Nick:", new { @style = "font-size: 22px; margin-right: 10px; padding: 5px;" })</td>
            <td>
                @Html.TextBoxFor(l => l.NickName, new { @class = "prettyInput", @style = "width: 110%;" })
            </td>
        </tr>

        <tr>
            <td>@Html.LabelFor(l => l.Password, "Hasło:", new { @style = "font-size: 22px; margin-right: 10px; padding: 5px;" })</td>
            <td>
                @Html.PasswordFor(l => l.Password, new { @class = "prettyInput", @style = "width: 110%;" })
            </td>
        </tr>

        <tr>
            <td>@Html.LabelFor(l => l.ConfirmPassword, "Powtórz:", new { @style = "font-size: 22px; margin-right: 10px; padding: 5px;" })</td>
            <td>
                @Html.PasswordFor(l => l.ConfirmPassword, new { @class = "prettyInput", @style = "width: 110%;" })
            </td>
        </tr>

        <tr>
            <td colspan="3" style="text-align: center;">
                <input type="submit" value="Zarejestruj" style="font-size: 17px; margin-top: 12px; padding: 2px 8px 2px 8px;" />
            </td>
        </tr>
    </table>
}

@section ScriptsBottom{
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="@Url.Content("~/Content/Prototype/scripts/mainPage.js")"></script>
}
